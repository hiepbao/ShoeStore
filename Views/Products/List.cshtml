@model ShoeStore.Models.GetProducts_Result
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="list-wrapper">
    <div class="list-side-bar-space">
        <div class="list-side-bar-wrap">
            <div class="list-side-bar">
                <div class="list-menu category mx-3">
                    <button class="dropdown-btn fw-bold">
                        Category
                    </button>
                    <div class="dropdown-container color mx-3 mb-3">
                        <div class="cate-option">Running</div>
                        <div class="cate-option">Lifestyle</div>
                        <div class="cate-option">Baseketball</div>
                        <div class="cate-option">Football</div>
                        <div class="cate-option">Jordan</div>
                        <div class="cate-option">Goft</div>
                        <div class="cate-option">Tennis</div>
                        <div class="cate-option">Skateboarding</div>
                        <div class="cate-option">Traning & gym</div>
                        <div class="cate-option">Athletics</div>
                        <div class="cate-option">Walking</div>
                    </div>
                </div>
               
                <div class="list-menu price mx-3">
                    <button class="dropdown-btn fw-bold">
                        Shop By Price
                    </button>
                    <div class="list-dropdown-container price mx-3">
                        <p><input type="checkbox" name="" id="">  Under 1,500,000</p>
                        <p><input type="checkbox" name="" id="">  1,500,000 - 2,499,000</p>
                        <p><input type="checkbox" name="" id="">  2,500,000 - 3,500,000</p>
                        <p><input type="checkbox" name="" id="">  Over 3,500,000</p>
                    </div>
                </div>
                <div class="list-menu size mx-3">
                    <button class="dropdown-btn fw-bold">
                        Size
                    </button>
                    <div class="list-dropdown-container size mx-3">
                        <div class="size-option">37</div>
                        <div class="size-option">37.5</div>
                        <div class="size-option">38</div>
                        <div class="size-option">38.5</div>
                        <div class="size-option">39</div>
                        <div class="size-option">39.5</div>
                        <div class="size-option">40</div>
                        <div class="size-option">40.5</div>
                        <div class="size-option">41</div>
                        <div class="size-option">41.5</div>
                        <div class="size-option">42</div>
                        <div class="size-option">42.5</div>
                    </div>
                </div>
                <div class="list-menu color mx-3">
                    <button class="dropdown-btn fw-bold">
                        Colours
                    </button>
                    <div class="dropdown-container color mx-3">
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                        <div class="color-option"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="list-products-wrap">
        <div class="list-body-title">
            @*<div class="list-title-span">@ViewBag.Category</div>
                <div class="list-sort-by-wrap">
                    <button class="dropdown-btn">
                        Sort by
                    </button>
                    <div class="list-dropdown-container box">
                        <div class=""> A - Z</div>
                        <div class=""> Z - A</div>
                    </div>
                </div>*@
        </div>
        <div class="list-product-items-wrap">
            @foreach (var product in ViewBag.Product)
            {
                string image = "";
                if (product.ImageData != null)
                {
                    image = Convert.ToBase64String(product.ImageData);
                }
                else
                {
                    image = "~/images/shoemodel.jpg";
                }

                <div class="list-product-item">
                    <a href="@Url.RouteUrl("ChiTietSanPham", new { id = product.ProductId }) ">
                        <div class="list-product-img-wrap">
                            @if (product.ImageData != null)
                            {
                                <img src="data:image/@product.ImageExtension;base64,@Convert.ToBase64String(product.ImageData)" class="w-100" alt="">
                            }
                            else
                            {
                                <img src="~/images/shoemodel.jpg" class="w-100" alt="">
                            }
                        </div>
                        <div class="list-product-name-wrap">
                            @product.ProductName
                        </div>
                        <div class="list-product-category-wrap">
                            @product.CategoryName
                        </div>
                        <div class="list-product-color-warp">
                            @product.ColorSum Color
                        </div>
                        <div class="list-product-price">
                            @product.ProductPrice.ToString("n0") VND
                        </div>
                    </a>

                </div>
            }

        </div>
    </div>


</div>
<script>
    var dropdown = document.getElementsByClassName("dropdown-btn");
    var i;

    for (i = 0; i < dropdown.length; i++) {
        dropdown[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var dropdownContent = this.nextElementSibling;
            dropdownContent.classList.toggle("active");
        });
    }
</script>

@section Styles
{
    <style type="text/css">
        /* #region Body */
        .list-wrapper {
            display: flex;
            justify-content: space-between;
            gap: 50px;
            margin-top: 20px;
        }

        /* #region Sidebar */
        .list-side-bar-space {
            width: 260px;
            height: 100vh;
        }

        .list-side-bar-wrap {
            /*  position: fixed;
            overflow: hidden;*/
            overflow-y: scroll;
            top: 100px;
            bottom: 200px;
            width: inherit;
        }

        .list-side-bar {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .list-menu {
            width: inherit;
            display: flex;
            flex-direction: column;
            border-bottom: #D9D9D9 1px solid;
        }

            .list-menu:last-child {
                border-bottom: unset;
            }

            .list-menu li {
                list-style: none;
            }

        .dropdown-btn {
            padding: 6px 0px 6px 16px;
            text-decoration: none;
            font-size: unset;
            display: block;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
            outline: none;
            width: max-content;
        }

        .list-dropdown-container {
            flex-direction: column;
            display: none;
            width: inherit;
        }

            .list-dropdown-container.active {
                display: flex;
            }

            .list-dropdown-container.size {
                flex-direction: row;
                flex-wrap: wrap;
                gap: 10px;
                margin-bottom: 20px;
            }

                .list-dropdown-container.size div {
                    border: #000 1px solid;
                    border-radius: 6px;
                    width: 57px;
                    cursor: pointer;
                    padding: 5px 10px;
                    user-select: none;
                    -webkit-user-select: none;
                    -moz-user-select: none;
                    text-align:center;
                }

                    .list-dropdown-container.size div.active {
                        background: #000;
                        color: white;
                    }

                    .list-dropdown-container.size div:hover {
                        background: #000;
                        color: white;
                    }

            .list-dropdown-container.color {
                flex-direction: row;
                flex-wrap: wrap;
                gap: 10px;
            }

                .list-dropdown-container.color div {
                    border: #000 1px solid;
                    border-radius: 50%;
                    width: 22px;
                    height: 22px;
                    cursor: pointer;
                    user-select: none;
                    -webkit-user-select: none;
                    -moz-user-select: none;
                }
        /* #endregion Sidebar  */
        /* #region Title*/
        .list-body-title {
            display: flex;
            justify-content: space-between;
        }

        .list-sort-by-wrap {
            display: flex;
            flex-direction: column;
            width: 200px;
            align-items: center;
        }

        .list-dropdown-container.box {
            border-radius: 10px;
            box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);
            position: fixed;
            background: white;
            top: 90px;
            width: 100px;
            overflow: hidden;
        }

            .list-dropdown-container.box div {
                padding: 10px 20px;
                cursor: pointer;
            }

                .list-dropdown-container.box div:hover {
                    background: #d6d6d6;
                }
        /* #endregion Tilte*/

        /* #region Product */

        .list-products-wrap {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .list-product-items-wrap {
            display: flex;
            flex-wrap: wrap;
            justify-content: left;
            gap: 20px;
        }

            .list-product-items-wrap a {
                text-decoration: none;
            }

            .list-product-items-wrap .list-product-item {
                color: #F0EEEE;
                display: flex;
                flex-direction: column;
                flex-basis: 23%;
                padding: 10px;
            }

                .list-product-items-wrap .list-product-item .list-product-img-wrap {
                    width: 100%;
                }

                    .list-product-items-wrap .list-product-item .list-product-img-wrap img {
                        width: 100%;
                        object-fit: cover;
                        aspect-ratio: 1/1;
                    }

                .list-product-items-wrap .list-product-item .list-product-name-wrap {
                    color: black;
                    font-weight: 600;
                }

                .list-product-items-wrap .list-product-item .list-product-category-wrap {
                    color: gray !important;
                }

                .list-product-items-wrap .list-product-item .list-product-color-warp {
                    color: gray;
                }

                .list-product-items-wrap .list-product-item .list-product-price {
                    color: black;
                    font-weight: 600;
                }

                .list-product-items-wrap .list-product-item .list-product-item {
                    display: flex;
                    flex-direction: column;
                    color: black;
                    font-family: 'Montserrat', sans-serif;
                    -webkit-user-select: none; /* Safari */
                    -ms-user-select: none; /* IE 10 and IE 11 */
                    user-select: none; /* Standard syntax */
                }

        /* #endregion Body */
    </style>
}