
@{
    var ReceiptDetails = ViewBag.Details as ShoeStore.Models.Receipt_Details_Result;
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container" style="background-color: #F2F2F2; padding: 50px; margin: auto">
        <div class="form-horizontal row" style="background-color: white; padding: 30px; border-radius: 1rem">
            <h4>Order details</h4>
            <hr />
            <div class="col-4">
                <div class="form-group">
                    <label for="" class="form-label mb-2">Id orders</label>
                    <div class="col mb-3 mt-2">
                        <input class="form-control" type="text" value="@ReceiptDetails.ReceiptId" aria-label="Disabled input example" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="form-label mb-2">Time</label>
                    <div class="col mb-3 mt-2">
                        <input class="form-control" type="text" value="@ReceiptDetails.dates" aria-label="Disabled input example" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="form-label mb-2">Status</label>
                    <div class="col mb-3 mt-2">
                        <input class="form-control" type="text" value="@ReceiptDetails.StatusName" aria-label="Disabled input example" readonly>
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label for="" class="form-label mb-2">Customer Name</label>
                    <div class="col mb-3 mt-2">
                        <input class="form-control" type="text" value="@ReceiptDetails.CustomerName" aria-label="Disabled input example" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="form-label mb-2">Address</label>
                    <div class="col mb-3 mt-2">
                        <input class="form-control" type="text" value="@ReceiptDetails.AddressReceipt" aria-label="Disabled input example" readonly>

                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="form-label mb-2">Phone number</label>
                    <div class="col mb-3 mt-2">
                        <input class="form-control" type="text" value="@ReceiptDetails.PhoneCus" aria-label="Disabled input example" readonly>
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label for="" class="form-label mb-2">Quantity</label>
                    <div class="col mb-3 mt-2">
                        <input class="form-control" type="text" value="@ReceiptDetails.TotalQuantity" aria-label="Disabled input example" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="form-label mb-2">Total</label>
                    <div class="col mb-3 mt-2">
                        <input class="form-control" type="text" value="@ReceiptDetails.Total VND " aria-label="Disabled input example" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="form-label mb-2">Payment Method</label>
                    <div class="col mb-3 mt-2">
                        <input class="form-control" type="text" value="@ReceiptDetails.PaymentMethod" aria-label="Disabled input example" readonly>
                    </div>
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                @Html.ActionLink("Back", "OrderList", "Receipt", new { @class = "btn btn-outline-success", @style = "border-radius: 1.5rem;  width: 100px;" })
                <input type="submit" value="Cancel" class="btn btn-success" style="border-radius: 1.5rem;  width: 100px;" />
            </div>
        </div>
    </div>
}


