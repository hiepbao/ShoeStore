
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IEnumerable<ShoeStore.Models.Get_session_Result>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">


<div class="container" style="background-color: #F2F2F2; padding: 50px;">
    <h4 >Customer Management</h4>
    <a href="@Url.RouteUrl("ThemKH")" class="btn btn-success my-3" style="border-radius: 1.5rem;  width: 20%;">Create an account</a>
    <div class="form-horizontal" style="background-color: white; padding: 30px; border-radius: 1rem; margin-top: 20px;">
        <table class="table table-hover">
            <tr>

                <th>
                    <span>Name</span>
                </th>
                <th>
                    <span>Email</span>
                </th>
                <th>
                    <span>Phone</span>
                </th>
                <th>
                    <span>Address</span>
                </th>
                <th>
                    <span>Username</span>
                </th>

            </tr>

            @foreach (var item in ViewBag.CustomerList)
            {
                <tr>

                    <td>
                        @item.CustomerName
                    </td>
                    <td>
                        @item.CustomerEmail
                    </td>
                    <td>
                        @item.CustomerPNum
                    </td>
                    <td>
                        @item.CustomerAddress
                    </td>
                    <td>
                        @item.CustomerUsername
                    </td>

                </tr>
            }

        </table>
    </div>
</div>



