
@{
    ViewBag.Title = "SuaSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    

    <div class="container" style="background-color: #F2F2F2; padding: 50px; margin: auto">
        <form action="@Url.RouteUrl("SuaSP")" method="post" enctype="multipart/form-data" class="w-100">
            <div class="form-horizontal w-50 mx-auto" style="background-color: white; padding: 30px; border-radius: 1rem">
                <h4 class="text-center">Change information</h4>
                @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div class="form">
                    <div class="col">
                        <label for="" class="form-label my-3">Name</label>
                        <input type="text" name="ProductName" class="form-control" value="@ViewBag.sua.ProductName" />
                    </div>
                    <div class="col">
                        <label for="" class="form-label my-3">Price</label>
                        <input type="text" name="ProductPrice" class="form-control" value="@ViewBag.sua.ProductPrice" />
                    </div>


                    <div class="col">
                        <label for="" class="form-label my-3">Category</label>
                        <select name="ProductCategory" id="" class="form-select p-2 mw-100" }>
                            @foreach (var cate in ViewBag.cate)
                            {
                                <option value="@cate.CategoryId" @(cate.CategoryId == ViewBag.sua.ProductCategory ? "selected" : "") >@cate.CategoryName</option>
                            }
                        </select>
                        @*<input type="text" name="ProductCategory" class="form-control" value="@ViewBag.sua.ProductCategory" />*@
                    </div>
                    <div class="col">
                        <label for="" class="form-label my-3">Description</label>
                        <input type="text" name="Description" class="form-control" value="@ViewBag.sua.Description" />
                    </div>
                    <div class="col">
                        <label for="" class="form-label my-3">Image</label>
                        <input type="file" name="anh" class="form-control" value="" required/>
                    </div>
                    <div class="col ">
                        <label for="" class="form-label my-3">Image Extension</label>
                        <input type="text" name="ImageExtension" class="form-control" value="" required/>
                        @Html.ValidationMessage("ImageExtension", "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="d-flex justify-content-center mt-3">
                    @Html.ActionLink("Cancel", "manager", "Product", new { @class = "btn btn-outline-success mt-3", @style = "border-radius: 1.5rem;  width: 100px;" })
                    <button class="btn btn-success mt-3" name="ProductID" style="border-radius: 1.5rem; width: 100px; margin-left: 15px;" type="submit" value="@ViewBag.sua.ProductId">Save</button>
                </div>
            </div>
        </form>
    </div>




